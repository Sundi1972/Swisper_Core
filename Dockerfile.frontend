FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY frontend/package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy frontend source
COPY frontend/ ./

# Build the frontend
RUN npm run build

# Serve the built frontend
EXPOSE 5173
CMD ["npm", "run", "preview", "--", "--host", "0.0.0.0"]
